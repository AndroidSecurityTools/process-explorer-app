<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">

    <EditTextPreference
            android:key="counter"
            android:title="Port"
            android:summary=""
            android:defaultValue="0"
            />

    <CheckBoxPreference
        android:key="isRunning"
        android:title="Start the service with the device"
        android:summary="" />

    <Preference
        android:key="startNow"
        android:title="Start the service immediately" />

    <Preference
        android:key="stopNow"
        android:title="Stop the service immediately" />

</PreferenceScreen>